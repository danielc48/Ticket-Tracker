<% layout('layouts/boilerplate') -%>
    <h1><%= ticket.title %> </h1>
    <ul>
        <li>Description: <%= ticket.description %> </li>
        <li>Steps to reproduce: <%= ticket.reproduceBug %> </li>
        <li>Status: <%= ticket.status %> </li>
        <li>Classification: <%= ticket.classification %> </li>
    </ul>
    <form action="/tickets/<%=ticket._id%>?_method=DELETE" method="POST">
        <button>Delete Ticket</button>
    </form>
    <a href="/tickets">All tickets</a>
    <a href="/tickets/<%= ticket._id %>/edit">Edit Ticket</a>
