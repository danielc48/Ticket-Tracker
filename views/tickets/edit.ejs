<% layout('layouts/boilerplate') -%> 
    <h1>Edit Ticket</h1>
    <form action="/tickets/<%=ticket._id%>?_method=PUT" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="ticket[title]" value="<%=ticket.title%>" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
          
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input type="text" id="description" name="ticket[description]" value="<%=ticket.description%>" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
              </div>
          
        </div>
        <div class="mb-3">
            <label for="reproduceBug" class="form-label">Steps to reproduce bug</label>
            <textarea name="ticket[reproduceBug]" id="reproduceBug" cols="30" rows="10" class="form-control" required><%= ticket.reproduceBug %> </textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
          
        </div>
        <div class="mb-3 form-check">
            <p>Status</p>
            <input type="radio" id="open" name="ticket[status]" value="open" <%= ticket.status === 'open' ? 'checked="checked"' : '' %>  class="form-check-input">
            <label for="open" class="form-check-label">Open</label><br>
            <input type="radio" id="closed" name="ticket[status]" value="closed" <%= ticket.status === 'closed' ? 'checked="checked"' : '' %> class="form-check-input">
            <label for="closed" class="form-check-label">Closed</label><br>
        </div>
        <div class="mb-3">
            <label for="classification">Classification</label>
            <select name="ticket[classification]" id="classification">
                <option value="unclassified" <%= ticket.classification === 'unclassified' ? 'selected="selected"' : '' %> >Unclassified</option>
                <option value="approved" <%= ticket.classification === 'approved' ? 'selected="selected"' : '' %> >Approved</option>
                <option value="unapproved" <%= ticket.classification === 'unapproved' ? 'selected="selected"' : '' %> >Unapproved</option>
                <option value="duplicate" <%= ticket.classification === 'duplicate' ? 'selected="selected"' : '' %> >Duplicate</option>
            </select>
        </div>
        <button>Submit</button>
    </form>
    <a href="/tickets">All tickets</a>
