<% layout('layouts/boilerplate') -%>
<div class="row">
    <div class="col-md-6 offset-3">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title mb-3">New Ticket</h5>
                <form action="/tickets" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-label" >Title</label>
                        <input type="text" id="title" name="ticket[title]" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label" >Description</label>
                        <input type="text" id="decription" name="ticket[description]" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="mb-3">
                        <label for="reproduceBug" class="form-label" >Steps to reproduce bug</label>
                        <textarea name="ticket[reproduceBug]" id="reproduceBug" cols="20" rows="10" class="form-control" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>
            </div>
          </div>
    </div>
</div>
    
      